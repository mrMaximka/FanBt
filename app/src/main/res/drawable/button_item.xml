<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="12dip" />
            <stroke
                android:width="1dp"
                android:color="#BFB0B0" />
            <gradient android:angle="-90" android:startColor="@color/colorOrange" android:endColor="@color/colorGold"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="12dip" />
            <gradient android:angle="-90" android:startColor="@color/colorGold" android:endColor="@color/colorOrange" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="12dip" />
            <gradient android:angle="-90" android:startColor="@color/colorGold" android:endColor="@color/colorOrange" />
        </shape>
    </item>
</selector>